{%- assign product = all_products[section.settings.product] -%}

<div class="card">
  <img src="{{ product | img_url: '512x512' }}" />
  <div class="card-section">
    <h3>{{ product.title }}</h3>
  </div>
</div>

{% schema %}
  {
    "name": "Featured Product",
    "settings": [
      {
        "type": "product",
        "id": "product",
        "label": "Product"
      }
    ],
    "presets": [
      {
        "name": "Featured Product",
        "category": "Products"
      }
    ]
  }
{% endschema %}